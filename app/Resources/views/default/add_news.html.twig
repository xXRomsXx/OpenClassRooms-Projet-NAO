{% extends "base.html.twig" %}

{% block stylesheets %}

    {{ parent() }}
    <link rel = "stylesheet" href = "{{ asset('CSS/add_news.css') }}" />

{% endblock %}

{% block title %}Ajouter une actualité{% endblock %}

{% block body %}
<div class="container-fluid" style="padding-top: 100px;">
		<div class="col-lg-11 m-auto">
			<h1 class="main-title mt-2">AJOUTER UNE ACTUALITÉ</h1>
		</div>

	<div class="col-lg-8 m-auto">

		{{ form_start(form) }}

		{{ form_errors(form) }}

		<div class="form-group">
			{{ form_row(form.title) }}
		</div>

		<div class="form-group">
			{{ form_row(form.content) }}
		</div>

{# 		<div class="form-group">
			{{ form_row(form.picture) }}
		</div> #}

		<div class="form-group">
			<label for="dropzone-previews">Photo (facultatif, maximum 1)</label>
			<div class="dropzone-previews dropzone mb-3 col-lg-10 m-auto" id="mydropzone" action="{{ path('ajax_dropzone_news') }}"></div>
		</div>

		<div class="form-group col-lg-4 m-auto">
			{{ form_row(form.submit) }}
		</div>
		
		<p class="m-auto font-italic text-center col-lg-3">Les champs marqués d'un * sont obligatoires.</p>

		{{ form_rest(form) }}

		{{ form_end(form) }}

	</div>
</div>



{% endblock %}

{% block javascripts %}

	{{ parent() }}
  <script src = "{{ asset('JS/add_news.js') }}"></script>

{% endblock %}